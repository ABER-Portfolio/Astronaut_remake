a_shake_var_a++

shake_angle_power += (0 - shake_angle_power)*0.025
shake_angle_power -= shake_angle_power*0.01
shake_angle_power -= shake_angle_power/500

if a_shake_var_a >= 0 && a_shake_var_a < 2
{
image_angle = -shake_angle_power
}

if a_shake_var_a >= 2 && a_shake_var_a < 4
{
image_angle = shake_angle_power
}

if a_shake_var_a >= 4 && a_shake_var_a < 6
{
image_angle = -shake_angle_power
}

if a_shake_var_a >= 6 && a_shake_var_a < 8
{
image_angle = shake_angle_power
}

if a_shake_var_a >= 8 && a_shake_var_a < 10
{
image_angle = -shake_angle_power
}

if a_shake_var_a >= 10 && a_shake_var_a < 12
{
image_angle = shake_angle_power
}

if a_shake_var_a >= 12 && a_shake_var_a < 14
{
image_angle = -shake_angle_power
}

if a_shake_var_a >= 14
{
a_shake_var_a = 0
}






